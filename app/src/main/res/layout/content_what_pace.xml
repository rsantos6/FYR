<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.github.fyr.WhatPace"
    tools:showIn="@layout/activity_what_pace"
    android:background="@drawable/background_color">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="What Do You Feel Like Today?"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/background_material_light"
        android:textSize="45dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Pace (min/mile):"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="61dp"
        android:textColor="@color/background_material_light"
        android:textSize="30dp" />




    <Button
        android:backgroundTint="@color/button_material_dark"
        android:textColor="@color/abc_primary_text_disable_only_material_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Return Home"
        android:id="@+id/button2"
        android:layout_alignBottom="@+id/button"
        android:layout_alignParentStart="true"
        android:minWidth="150dp" />

    <Button
        android:backgroundTint="@color/button_material_dark"
        android:textColor="@color/abc_primary_text_disable_only_material_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next "
        android:id="@+id/button"
        android:layout_marginBottom="38dp"
        android:minWidth="150dp"
        android:onClick="addPace"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9-8"
        android:id="@+id/nine_eight"
        android:onClick="onRadioButtonClicked"
        android:minWidth="125dp"
        android:minHeight="50dp"
        android:layout_above="@+id/button2"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="40dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8-7"
        android:id="@+id/eight_seven"
        android:onClick="onRadioButtonClicked"
        android:minWidth="125dp"
        android:minHeight="50dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7-6"
        android:id="@+id/seven_six"
        android:onClick="onRadioButtonClicked"
        android:minWidth="125dp"
        android:checked="false"
        android:minHeight="50dp"
        android:layout_alignTop="@+id/nine_eight"
        android:layout_alignStart="@+id/button" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10-9"
        android:id="@+id/ten_nine"
        android:onClick="onRadioButtonClicked"
        android:minWidth="125dp"
        android:minHeight="50dp"
        android:layout_alignTop="@+id/eight_seven"
        android:layout_alignStart="@+id/seven_six" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/abc_primary_text_disable_only_material_dark"
        android:minWidth="100dp" />


</RelativeLayout>
