<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_profile_pace"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.github.fyr.ProfilePace"
    tools:showIn="@layout/activity_profile_pace"
    android:background="@drawable/background_color">




    <Button
        android:backgroundTint="@color/button_material_dark"
        android:textColor="@color/abc_primary_text_disable_only_material_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/button"
        android:layout_marginBottom="38dp"
        android:minWidth="150dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:textSize="20dp"
        android:layout_alignParentStart="true" />


    <RadioGroup
        android:id="@+id/paceGroup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:orientation="vertical"
        android:layout_marginTop="30dip">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10 min/mile or slower"
            android:id="@+id/ten_plus"
            android:minWidth="75dp"
            android:minHeight="25dp"
            android:layout_above="@+id/ten_nine"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dip"
            android:textColor="@color/abc_primary_text_disable_only_material_dark"
            android:checked="false"
            android:textSize="25dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9 - 10 min/mile"
            android:id="@+id/seven_six"
            android:minWidth="75dp"
            android:checked="false"
            android:minHeight="25dp"
            android:layout_below="@+id/eight_seven"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dip"
            android:textColor="@color/abc_primary_text_disable_only_material_dark"
            android:textSize="25dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8 - 9 min/mile"
            android:checked="false"
            android:id="@+id/eight_seven"
            android:minWidth="75dp"
            android:minHeight="25dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dip"
            android:textColor="@color/abc_primary_text_disable_only_material_dark"
            android:textSize="25dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7 - 8 min/mile"
            android:id="@+id/nine_eight"
            android:checked="false"
            android:minWidth="75dp"
            android:minHeight="25dp"
            android:layout_above="@+id/eight_seven"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dip"
            android:textColor="@color/abc_primary_text_disable_only_material_dark"
            android:textSize="25dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6 - 7 min/mile"
            android:id="@+id/ten_nine"
            android:checked="false"
            android:minWidth="75dp"
            android:minHeight="25dp"
            android:layout_above="@+id/nine_eight"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dip"
            android:textColor="@color/abc_primary_text_disable_only_material_dark"
            android:textSize="25dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6 min/mile or faster"
            android:id="@+id/six_faster"
            android:layout_below="@+id/seven_six"
            android:layout_alignParentStart="true"
            android:checked="false"
            android:minWidth="75dp"
            android:minHeight="25dp"
            android:layout_marginTop="10dip"
            android:textColor="@color/abc_primary_text_disable_only_material_dark"
            android:textSize="25dp" />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView"
        android:textColor="@color/background_material_light"
        android:textSize="30dp"
        android:layout_alignParentStart="true" />


</RelativeLayout>
